<div class="money-container row">
  <div class="col-lg-12">
    <div class="small">Total Money In (<%= @cashflow.time_period %>)</div>
    <div class="cashflow-value lg-24"><%= number_to_currency(@cashflow.total_money_in.abs) %></div>
  </div>

  <div class="category-spend small col-lg-12">
    <table class="table table-borderless hoverable">
      <tbody>
        <% @earning_transactions.each do |earning| %>
        <% if earning.transactions.count > 0 %>
        <tr class="category-row" data-cashflow-type="money_in" data-essential="true">
          <td class="w-75">
            <div class="category-desc"><%= earning.category_name %></div>
            <div class="progress">
              <div class="progress-bar" role="progressbar" 
                style="width:<%=  100*(earning.total_spend/@cashflow.total_money_in).abs %>%"
                aria-valuenow="<%=  100*(earning.total_spend/@cashflow.total_money_in).abs %>" 
                aria-valuemin="0" aria-valuemax="100">
              </div>
            </div>
          </td>
          <td class="text-right w-25 bold-2">
            <%= number_to_currency(earning.total_spend.abs)%>
          </td>
        </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>