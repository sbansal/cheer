<div class="row m-0 border-bottom">
  <div class="col fw-bold p-3" id="tx-header">Transactions</div>
  <div class="col p-3 text-end small"><%= formatted_time_period(@start_date, @end_date) %></div>
</div>
<% if transactions.empty? %>
  <div class="row m-0">
    <div class="col-sm-12 py-3">
      <div class="text-center grey-100 font-italic med">No transactions yet.</div>
    </div>
  </div>
<% else %>
  <% transactions.each do |tx| %>
    <div class="row m-0 border-bottom tx-row" data-id="<%= tx.id %>">
      <div class="col-sm-9 p-3">
        <div class=""><%= tx.custom_description %></div>
        <div class="small grey-100"><%= tx.formatted_occurred_at %></div>
      </div>
      <div class="col-sm-3 p-3 text-end"><%= number_to_currency(tx.amount)%></div>
      <div class="col-sm-12 p-3 tx-details hide"  id="tx-details-<%= tx.id%>">
        <%= render 'transactions/transaction_detail', tx: tx %>
      </div>
    </div>
  <% end %>
<% end %>