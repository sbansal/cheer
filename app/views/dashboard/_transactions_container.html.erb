<div class="row m-0 border-bottom">
  <div class="col font-weight-bold p-3" id="tx-header">Transactions</div>
  <div class="col font-weight-bold p-3 text-right"><%= formatted_time_period(@start_date, @end_date) %></div>
</div>

<% @transactions.each do |tx| %>
<div class="row m-0 border-bottom tx-row" data-id="<%= tx.id %>">
  <div class="col-lg-9 p-3">
    <div class=""><%= tx.custom_description %></div>
    <div class="small grey"><%= tx.formatted_occurred_at %></div>
  </div>
  <div class="col-lg-3 p-3 text-right"><%= number_to_currency(tx.amount)%></div>
  <div class="col-lg-12 p-3 tx-details hide"  id="tx-details-<%= tx.id%>">
    <%= render 'transactions/transaction_detail', tx: tx %>
  </div>
</div>
<% end %>

<table class="table transactions hoverable">
  <tbody>
  <% @transactions.each do |tx| %>
  <tr class="small tx-row" data-id="<%= tx.id %>">
    <td>
      <div class="small"><%= tx.custom_description %></div>
      <div class="small grey"><%= tx.formatted_occurred_at %></div>
    </td>
    <td class="text-right small"><%= number_to_currency(tx.amount)%></td>
  </tr>
  <tr class="tx-details hide"  id="tx-details-<%= tx.id%>">
    <td colspan="12">
      <%= render 'transactions/transaction_detail', tx: tx %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>