<div class="row time-scale py-1 border rounded-3">
  <div class="col px-1 text-center">
    <%= link_to Date.today.strftime('%b %Y'), income_expense_path(period: Stat::THIS_MONTH),
      class: "xs #{'active' if @period.eql?(Stat::THIS_MONTH)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to (Date.today - 1.month).strftime('%b %Y'), income_expense_path(period: Stat::LAST_MONTH),
      class: "xs #{'active' if @period.eql?(Stat::LAST_MONTH)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to '3M', income_expense_path(period: Stat::QUARTERLY),
      class: "xs #{'active' if @period.eql?(Stat::QUARTERLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to '1Y', income_expense_path(period: Stat::YEARLY),
      class: "xs #{'active' if @period.eql?(Stat::YEARLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to 'ALL', income_expense_path(period: Stat::ALL),
      class: "xs #{'active' if @period.eql?(Stat::ALL)}"%>
  </div>
</div>