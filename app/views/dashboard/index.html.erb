<div class="metrics-container">
  <div class="metric">
    <div class="metric-title">Total Earnings</div>
    <div class="metric-value"><%= number_to_currency(9800)%></div>
    <div class="metric-trend">
      <svg fill="currentColor" viewBox="0 0 20 20" class="icon-small up">
        <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd">
        </path>
      </svg>
      <span class="trend-value up">+<%= number_to_currency(123)%> (<%= number_to_percentage(1, precision: 2)%>)</span>
      <span class="trend-timeframe">Past Month</span>
    </div>
  </div>
  <div class="metric">
    <div class="metric-title">Total Expenses</div>
    <div class="metric-value"><%= number_to_currency(8000)%></div>
    <div class="metric-trend up">
