<div class="p-0 row med">
  <div class="col-8">
    <span class="primary text-decoration-underline arrow-right pointer" data-action="click->related-transactions#toggle">
      <%= pluralize(@aggregated_transactions.count, 'related transaction')%>
    </span>
  </div>
  <div class="col text-end">
    <%= signed_number_to_currency(@aggregated_transactions.total_spend)%>
  </div>
</div>
<div class="mt-3 hide" id="related-transactions">
  <% @related_transactions.each do |related_tx| %>
  <div class="row small py-2 border-bottom">
    <div class="col-8">
      <div>
        <%= link_to related_tx.custom_description, transaction_path(related_tx), class: 'no-bubble',
        data: {remote: true, bs_toggle: 'modal', bs_target: '#cheer-modal'} %>
      </div>
      <div class="grey-100"><%= related_tx.formatted_occurred_at %></div>
    </div>
    <div class="col text-end"><%= signed_number_to_currency(related_tx.amount)%></div>
  </div>
  <% end %>
</div>
