<% if transactions.empty? %>
  <div class="row m-0">
    <div class="col-12 py-3">
      <div class="text-center grey-100 font-italic med">No transactions yet.</div>
    </div>
  </div>
<% else %>
  <% transactions.each do |transaction| %>
  <div class="row py-1 border-bottom small" id="tx-<%= transaction.id %>">
    <%= render 'transactions/transaction_summary', transaction: transaction %>
  </div>
  <% end %>
<% end %>