<div class="row">
  <div class='col'>
    <% if subscription.present? %>
      <div>You are currently subscribed to the Cheer premium plan.</div>
      <div class="small grey-500 mb-3">
        You last payment of <%= number_to_currency(subscription.items.data.first.price.unit_amount/100) %>  was processed on
        <%= Time.at(subscription.current_period_start).to_date.strftime('%b %d, %Y')%>. We will charge your credit card next on
        <%= Time.at(subscription.current_period_end).to_date.strftime('%b %d, %Y')%>.
      </div>
      <%= form_tag '/billing/manage', method: :post,  class: 'form-inline', 'data-turbo': 'false' do %>
        <%= button_tag "View your billing details", class: 'btn btn-primary med fw-bold' %>
      <% end %>
    <% else%>
      <%= form_tag '/billing', class: 'form-inline', 'data-turbo': 'false' do %>
        <%= button_tag "Upgrade to premium plan", class: 'btn btn-primary med fw-bold' %>
      <% end %>
    <% end %>
  </div>
</div>