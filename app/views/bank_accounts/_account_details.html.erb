<div class="row m-0 border-bottom">
  <div class="col-lg-9 p-3 med">
    <div class="row">
      <div class="col-2">
        <% if account.login_item %>
          <div class="bank-logo"><%= image_tag account&.login_item&.institution&.logo_source, size: "30x30" %></div>
        <% else %>
          <%= render 'bank_accounts/placeholder_logo', account: account %>
        <% end %>
      </div>
      <div class="">
        <div><%= account.display_name %></div>
        <div class="small grey"><%= account.account_subtype&.upcase %></div>
      </div>
    </div>
  </div>
  <div class="col-lg-3 p-3 text-right med"><%= number_to_currency(account.balance) %></div>
</div>