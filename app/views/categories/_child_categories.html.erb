<ul class="small list-group">
<% categories.each do |cat|%>
<li class="list-group-item rounded-0 p-2 border-primary-100 category-list-item" data-categories-url-value="/categories/<%= cat.id%>"
  data-action="mouseover->categories#fetchChildCategories" data-categories-target="subCategoriesContainer">
  <div class="row m-0">
    <div class="col primary bold-2"><%= cat.primary_name%></div>
    <% unless cat.sub_categories.empty? %>
    <div class="col text-end bold-2 primary">&#8594;</div>
    <% end %>
  </div>
  <%= render 'sub_categories', category: cat %>
</li>
<% end %>
</ul>