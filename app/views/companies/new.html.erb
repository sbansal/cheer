<div class="container">
  <div class="auth-form border rounded-3 p-5">
    <div class="text-center lg-20">Welcome, let's get started.</div>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>

    <%= form_for(@company, method: :post, html: {'data-turbo': 'false'}) do |company_form| %>
    <%= render "shared/error_messages", object: @company %>
      <%= company_form.hidden_field :name %>
      <%= company_form.fields_for :users do |f| %>
        <div class="mb-3">
          <%= f.label :full_name, class: 'control-label form-label' %>
          <div>
            <%= f.text_field :full_name, class: 'form-control' %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: 'control-label form-label' %>
          <div>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'control-label form-label' %>
          <div>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>

        <div class="btn-container d-grid gap-2">
          <%= f.submit "Create your account", :class => 'btn btn-primary' %>
          <p class="small grey-500 text-center mt-3">
            By clicking, you agree to our <%= link_to 'terms of service', '', class: 'grey-500 text-decoration-underline' %>.
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <p class="text-center med mt-3">Already have an account? <%= link_to 'Sign In', new_user_session_path, class: "purple-linky" %></p>
</div>