<div class="container">
  <div class="auth-form border rounded-3 p-5">
    <div class="text-center lg-20">Change your password</div>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="mb-3">
        <%= f.label :password, 'New password', class: 'control-label form-label' %>
        <div>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>
      
      <div class="mb-3">
        <%= f.label :password_confirmation, 'Confirm new password', class: 'control-label form-label' %>
        <div>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>

      <div class="btn-container d-grid gap-2">
        <%= f.submit "Change my password", :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <p class="text-center med mt-3">Want to sign in instead? <%= link_to 'Sign In', new_user_session_path, class: "purple-linky" %>.</p>
</div>

