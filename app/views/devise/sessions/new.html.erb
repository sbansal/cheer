<div class="container">
  <div class="auth-form border rounded-3 p-5">
    <h3 class="text-center">Hello there, Welcome. </h3>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
      html: {class: 'form-vertical', 'data-turbo': 'false'}) do |f| %>
    <div class="mb-3">
      <%= f.label :email, class: 'control-label form-label' %>
      <div>
        <%= f.email_field :email, class: 'form-control', autofocus: true %>
      </div>
    </div>
    <div class="mb-3">
      <%= f.label :password, class: 'control-label' %>
      <div>
        <%= f.password_field :password, :autocomplete => "off", class: 'form-control' %>
      </div>
    </div>

		<% if devise_mapping.rememberable? %>
    <div class="mb-3 small">
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'float-end primary'%>
      <% end %>
    </div>
    <% end %>
    <div class="btn-container d-grid gap-2">
      <%= f.submit "Sign in", :class => 'btn btn-primary fw-bold' %>
    </div>
    <% end %>
  </div>
  <% if Rails.application.credentials[:registrations_enabled] %>
    <p class="text-center">
      Don't have an account? <%= link_to 'Create New Account', new_registration_path(resource_name), class: "purple-linky" %>
    </p>
  <% end %>
</div>