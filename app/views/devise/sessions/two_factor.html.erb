<div class="container">
  <div class="auth-form border rounded-3 p-5" data-controller="utility">
    <h4 class="text-center">Two-Factor Authentication. </h4>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
      method: :post,  html: {class: 'form-vertical', 'data-turbo': 'false'}) do |f| %>
    <div class="mb-3">
      <%= f.label :otp_attempt, 'Enter the code generated by your authentication app.', class: 'control-label form-label med' %>
      <div>
        <%= f.text_field :otp_attempt, class: 'form-control', autocomplete: 'off', autofocus: true %>
      </div>
    </div>
    <div class="btn-container d-grid gap-2">
      <%= f.submit "Continue", :class => 'btn btn-primary fw-bold' %>
      <%= link_to "Back", new_user_session_path, :class => 'btn btn-outline-primary fw-bold' %>
    </div>
    <% end %>
  </div>
</div>
