<div class="container">
  <div class="sign-in-form">
    <h3 class="text-center">Sign up in less than a minute.</h3>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :full_name, class: 'control-label form-label' %>
      <div>
        <%= f.text_field :full_name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'control-label form-label' %>
      <div>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'control-label form-label' %>
      <div>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="btn-container">
      <p><%= f.submit "Create your account", :class => 'btn btn-primary btn-lg btn-block' %></p>
      <p class="tiny-text grey-text text-center">By clicking, you agree to our <%= link_to 'terms of service', '', class: 'linky' %>.</p>
    </div>
    <% end %>
    <p class="line-break"></p>
    <p class="text-center">Already have an account? <%= link_to 'Sign In', new_user_session_path, class: "linky" %></p>
  </div>
</div>