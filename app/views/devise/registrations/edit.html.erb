<div class="container">
  <div class="auth-form border rounded-3 p-5">
    <h3 class="text-center">Manage your account settings.</h3>
    <p class="line-break"></p>
    <%= render 'devise/shared/alerts'%>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
    :html => { :method => :put, class: 'form-horizontal' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="mb-3">
        <%= f.label :full_name, class: 'control-label form-label' %>
        <div>
          <%= f.text_field :full_name, class: 'form-control' %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: 'control-label form-label' %>
        <div>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'New Password', class: 'form-label control-label' %>
        <div>
          <%= f.password_field :password, :autocomplete => "new-password", class: 'form-control' %>
        </div>
        <span class="xs grey-100">Your password must have at least 8 characters.</span>

      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, 'New Password Confirmation', class: 'form-label control-label' %>
        <div>
          <%= f.password_field :password_confirmation, :autocomplete => "new-password", class: 'form-control' %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, 'Your current password', class: 'form-label control-label' %>
        <div>
          <%= f.password_field :current_password, :autocomplete => "current-password", class: 'form-control' %>
        </div>
      </div>

      <div class="mb-3">
        <%= f.submit "Save Changes", class: 'btn btn-primary med' %> or
        <%= link_to 'Cancel', root_path, class: 'grey-linky small' %>
      </div>
    <% end %>
	  <div class="line-break"></div>
	  <div class="row">
	    <div class="col-sm-12">
	      <h1 class="text-danger lg-20">Want to cancel?</h1>
	      <p>You can cancel your account at any time, no questions asked. Just click the link below.</p>
        <p class="small">Please keep in mind that we will delete all your data once you delete your account. This includes all logins and transactions. You will need to create a new account after that.</p>
	      <p><%= link_to "Delete my account.", registration_path(resource_name),
	        :data => { :confirm => "You are about to delete your account permanently. We will delete all your data from our servers." },
	        :method => :delete, class: 'btn btn-small btn-danger' %>
	      </p>
	    </div>
	  </div>
  </div>
</div>