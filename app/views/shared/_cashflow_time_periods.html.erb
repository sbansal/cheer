<div class="row time-scale py-1 border rounded-3">
  <div class="col px-1 text-center">
    <%= link_to '1W', cashflow_path(period: Stat::WEEKLY),
      class: "xs #{'active' if @period.eql?(Stat::WEEKLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to '1M', cashflow_path(period: Stat::MONTHLY),
      class: "xs #{'active' if @period.eql?(Stat::MONTHLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to '3M', cashflow_path(period: Stat::QUARTERLY),
      class: "xs #{'active' if @period.eql?(Stat::QUARTERLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to '1Y', cashflow_path(period: Stat::YEARLY),
      class: "xs #{'active' if @period.eql?(Stat::YEARLY)}"%>
  </div>
  <div class="col px-1 text-center">
    <%= link_to 'ALL', cashflow_path(period: Stat::ALL),
      class: "xs #{'active' if @period.eql?(Stat::ALL)}"%>
  </div>
</div>